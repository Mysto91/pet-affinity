{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="example-wrapper">
        {% if error %}
            <div class="alert alert-danger">
                {{error.messageKey | trans(error.messagedata,'security')}}
            </div>
        {% endif %}
        <div class="card bg-light mb-3 center" style="max-width: 20rem;">
            <div class="card-header"><h1>Connexion</h1></div>
            <div class="card-body">
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">Email
                        <input type="text" class="form-control" required name="_username" placeholder="email" value="{{last_username}}">
                    </div>
                    <div class="form-group">Mot de passe
                        <input type="password" class="form-control" required name="_password" placeholder="password">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Se connecter">
                    </div>
                </form>
            </div>
            <a class="" href="{{path('security_registration')}}">Cr√©er un compte</a>
        </div>
    </div>
{% endblock %}