{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Connexion</h1>
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">Email
                <input type="text" class="form-control" required name="_username" placeholder="email">
            </div>
            <div class="form-group">Mot de passe
                <input type="password" class="form-control" required name="_password" placeholder="password">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Se connecter">
            </div>
        </form>
        <a class="" href="{{path('security_registration')}}">Cr√©er un compte</a>
    </div>
{% endblock %}