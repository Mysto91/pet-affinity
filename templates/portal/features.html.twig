{% extends 'base.html.twig' %}

{% block title %}Features{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Features</h1>
    <div class="list-group">
        {% for feature in features %}
                <a href="{{ path('feature', {id: feature.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ feature.name }}</h5>
                    <small>created at : {{feature.createdAt | date('d/m/Y')}}</small>
                    </div>
                    <p class="mb-1">{{ feature.description }}</p>
                    <small>Donec id elit non mi porta.</small>
                </a> 
        {% endfor %}
    </div>
</div>
{% endblock %}
